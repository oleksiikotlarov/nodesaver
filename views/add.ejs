<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Upload</title>

    <link type="text/css" href="css/styles.css" rel="stylesheet" />
  </head>
  <body>
    <header>
      <a href="/">All Files</a>
      <a class="nav-list__link--active" href="/add"> Upload</a>
      <a id="delete-all-data-btn">Clear Database</a>
    </header>

    <div class="app">
      <form action="/upload" method="post" enctype="multipart/form-data">
        <label for="file">File:</label>
        <input type="file" id="file" name="file" required />
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" />
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" />
        <button type="submit" href="/">Share</button>
      </form>
    </div>

    <script>
      const deleteAllDataBtn = document.getElementById("delete-all-data-btn");

      deleteAllDataBtn.addEventListener("click", async () => {
        const password = prompt(
          "Please enter your password to delete all data:"
        );
        const response = await fetch("/deleteAllData", {
          method: "DELETE",
          headers: { password },
          body: JSON.stringify({ password }),
        });
        const result = await response.json();
        alert(result.message);
      });
    </script>
  </body>
</html>
